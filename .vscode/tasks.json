    "tasks": [
        {
            "label": "NinjaBuild",
            "type": "shell",
            "command": "${workspaceFolder}/NinjaBuild.bat",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
